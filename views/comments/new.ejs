<%- include("../partials/header") %>


<div class="ui main text container segment">
    <div class="ui huge header" >Add New Comment to <%= index.name %> </div>
    <form class="ui form" action="/index/<%= index._id %>/comments" method="POST">
        <div class="field">
            <label>Author</label>
            <input name="comment[author]" placeholder="Author" ></input>
        </div>
        <div class="field">
            <label>Comments</label>
            <textarea type="text" name="comment[text]" placeholder="Text"></textarea>
        </div>
        <input class="ui blue button" type="submit">
    </form>
</div>



